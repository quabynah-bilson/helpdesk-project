<resources>

    <!--Base theme, all common styling here-->
    <style name="Base.HelpDesk" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Emphasis -->
        <item name="emphasis_low">0.37</item>
        <item name="emphasis_medium">0.65</item>
        <item name="emphasis_high">0.86</item>

        <!-- Type -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MdcTypographyStyles.Headline1
        </item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MdcTypographyStyles.Headline2
        </item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MdcTypographyStyles.Headline3
        </item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MdcTypographyStyles.Headline4
        </item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MdcTypographyStyles.Headline6
        </item>
        <item name="textAppearanceBody1">@style/TextAppearance.MdcTypographyStyles.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MdcTypographyStyles.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MdcTypographyStyles.Subtitle1
        </item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MdcTypographyStyles.Subtitle2
        </item>
        <item name="textAppearanceCaption">@style/TextAppearance.MdcTypographyStyles.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MdcTypographyStyles.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MdcTypographyStyles.Overline
        </item>

        <!-- dialogs -->
        <item name="materialAlertDialogTitleTextStyle">
            @style/TextAppearance.MdcTypographyStyles.Headline6
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/TextAppearance.MdcTypographyStyles.Body2
        </item>
        <item name="materialAlertDialogTitlePanelStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked
        </item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--Default styles-->
        <item name="bottomNavigationStyle">@style/Widget.HelpDesk.BottomNavigationView</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.PrimarySurface</item>

    </style>

    <style name="HelpDesk" parent="@style/Base.HelpDesk" />

    <style name="HelpDesk.Yellow">
        <item name="colorPrimary">@color/helpdesk_yellow_500</item>
        <item name="colorPrimaryVariant">@color/helpdesk_yellow_400</item>
        <item name="colorSecondary">@color/helpdesk_blue_700</item>
        <item name="colorSecondaryVariant">@color/helpdesk_blue_800</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="HelpDesk.Blue">
        <item name="colorPrimary">@color/helpdesk_blue_700</item>
        <item name="colorPrimaryVariant">@color/helpdesk_blue_800</item>
        <item name="colorSecondary">@color/helpdesk_yellow_500</item>
        <item name="colorSecondaryVariant">@color/helpdesk_yellow_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        <item name="colorOnSurface">@android:color/darker_gray</item>-->
    </style>

    <style name="ThemeOverlay.HelpDesk.Blue" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/helpdesk_blue_700</item>
        <item name="colorPrimaryVariant">@color/helpdesk_blue_800</item>
        <item name="colorSecondary">@color/helpdesk_yellow_500</item>
        <item name="colorSecondaryVariant">@color/helpdesk_yellow_400</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.HelpDesk.Blue.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/helpdesk_blue_700</item>
        <item name="colorPrimaryVariant">@color/helpdesk_blue_800</item>
        <item name="colorSecondary">@color/helpdesk_yellow_500</item>
        <item name="colorSecondaryVariant">@color/helpdesk_yellow_400</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="HelpDesk.Pink">
        <item name="colorPrimary">@color/helpdesk_pink_500</item>
        <item name="colorPrimaryVariant">@color/helpdesk_pink_600</item>
        <item name="colorSecondary">@color/helpdesk_pink_500</item>
        <item name="colorSecondaryVariant">@color/helpdesk_pink_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:navigationBarColor">?colorSecondaryVariant</item>
    </style>

</resources>